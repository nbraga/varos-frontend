// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  cpf       String   @unique
  age       Int
  type      UserType @default(CLIENTE)
  
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  zipCode      String
  
  clientIds String[] @default([])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserType {
  CLIENTE
  CONSULTOR
}
